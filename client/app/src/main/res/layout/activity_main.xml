<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="20dp"
        android:lineSpacingExtra="4sp"
        android:text="@string/choose_your_things"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="20sp"
        app:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toTopOf="@+id/topic2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar2"
        tools:text="Choose your things" />

    <Button
        android:id="@+id/topic1"
        android:layout_width="86dp"
        android:layout_height="24dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/topicsbutton"
        android:text="@string/Cooking"
        android:textColor="#8e8e8e"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:fontFamily="Montserrat-Regular"
        app:layout_constraintEnd_toStartOf="@+id/topic2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <Button
        android:id="@+id/topic2"
        android:layout_width="86dp"
        android:layout_height="24dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/topicsbutton"
        android:text="@string/Art"
        android:textAllCaps="false"
        android:textColor="#8e8e8e"
        android:textSize="14sp"
        app:fontFamily="Montserrat-Regular"
        app:layout_constraintEnd_toStartOf="@+id/topic3"
        app:layout_constraintStart_toEndOf="@+id/topic1"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/topic3"
        android:layout_width="86dp"
        android:layout_height="24dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/topicsbutton"
        android:text="@string/diy"
        android:textAllCaps="true"
        android:textColor="#8e8e8e"
        android:textSize="14sp"
        app:fontFamily="Montserrat-Regular"
        app:layout_constraintEnd_toStartOf="@+id/topic4"
        app:layout_constraintStart_toEndOf="@+id/topic2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/topic4"
        android:layout_width="86dp"
        android:layout_height="24dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/topicsbutton"
        android:text="@string/fashion"
        android:textAllCaps="false"
        android:textColor="#8e8e8e"
        android:textSize="14sp"
        app:fontFamily="Montserrat-Regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/topic3"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <Button
        android:id="@+id/topic5"
        android:layout_width="86dp"
        android:layout_height="24dp"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/topicsbutton"
        android:text="@string/Psychology"
        android:textAllCaps="false"
        android:textColor="#8e8e8e"
        android:textSize="12sp"
        app:fontFamily="Montserrat-Regular"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toStartOf="@+id/topic6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topic1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/topic6"
        android:layout_width="86dp"
        android:layout_height="24dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/topicsbutton"
        android:text="@string/Science"
        android:textAllCaps="false"
        android:textColor="#8e8e8e"
        android:textSize="14sp"
        app:fontFamily="Montserrat-Regular"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toStartOf="@+id/topic7"
        app:layout_constraintStart_toEndOf="@+id/topic5"
        app:layout_constraintTop_toBottomOf="@+id/topic2" />

    <Button
        android:id="@+id/topic7"
        android:layout_width="86dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/topicsbutton"
        android:text="@string/Leadership"
        android:textAllCaps="false"
        android:textColor="#8e8e8e"
        android:textSize="14sp"
        app:fontFamily="Montserrat-Regular"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/topic6"
        app:layout_constraintTop_toBottomOf="@+id/topic4"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="147dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/letwatchbutton"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/let_s_watch"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topic1"
        app:layout_constraintVertical_bias="0.803"
        tools:ignore="InvalidId" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="302dp"
        android:layout_height="85dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="35dp"
        android:contentDescription="@string/img2"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/yizingwhite2" />

    <SeekBar
        android:id="@+id/seekBar2"
        style="@android:style/Widget.DeviceDefault.Light.SeekBar"
        android:layout_width="316dp"
        android:layout_height="25dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginBottom="30dp"
        android:longClickable="false"
        android:max="10"
        android:progress="3"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="28dp"
        android:lineSpacingExtra="4sp"
        android:text="@string/set_the_time"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="20sp"
        app:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toTopOf="@+id/seekBar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"/>

</androidx.constraintlayout.widget.ConstraintLayout>